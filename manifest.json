{
  "name": "Scraper Maker",
  "description": "This is a tool that helps non-programmers create RB scrapers.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Scraper Maker" //,
      // "default_icon": "icon.png",
      // "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [{
      "run_at": "document_end",
      "matches": [
          "https://*/*",
          "http://*/*"
      ],
      "js": ["jquery-3.2.1.slim.min.js", "content.js"]
  }],
  // "web_accessible_resources": ["popup.html"],
  "background": {
    "scripts":["background.js"]
  }
}
